# ip-detect configuration
# https://git.skobk.in/skobkin/ip-detect

# Docker image
#IMAGE_TAG=latest

# Network
#BIND_ADDRESS=127.0.0.1
#BIND_PORT=8396
# If you change IPD_ADDR port, update docker-compose.yml port mapping.
#IPD_ADDR=:8080

# Timeouts
#IPD_READ_TIMEOUT=5s
#IPD_WRITE_TIMEOUT=5s
#IPD_SHUTDOWN_TIMEOUT=10s

# Proxy handling
#IPD_TRUST_FORWARDED=true
#IPD_TRUSTED_SUBNETS=

# Response options
#IPD_RESOLVE_PTR=true
#IPD_RESOLVE_TIMEOUT=500ms
#IPD_INCLUDE_UA=true
#IPD_INCLUDE_TS=true

# Logging
#IPD_LOG_LEVEL=info
#IPD_LOG_FORMAT=text
#LOG_MAX_SIZE=5m
#LOG_MAX_FILE=5
