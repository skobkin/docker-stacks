# Element Call (Full Package)
CALL_IMAGE_TAG=latest
CALL_BIND_ADDR=127.0.0.1
CALL_HTTP_PORT=8391

# MatrixRTC Authorization Service (lk-jwt-service)
JWT_IMAGE_TAG=latest
JWT_BIND_ADDR=127.0.0.1
JWT_HTTP_PORT=8401

# WebSocket URL for the LiveKit SFU (through the reverse proxy)
LIVEKIT_URL=wss://ec.domain.tld/livekit/sfu

# LiveKit API credentials (must match config/livekit.yaml)
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=change-me

# Comma-separated list of homeservers allowed to create rooms (use * for all)
LIVEKIT_FULL_ACCESS_HOMESERVERS=ec.domain.tld

# LiveKit SFU
LIVEKIT_IMAGE_TAG=latest
LIVEKIT_WS_BIND_ADDR=127.0.0.1
LIVEKIT_WS_PORT=7880
LIVEKIT_RTC_TCP_BIND_ADDR=0.0.0.0
LIVEKIT_RTC_TCP_PORT=7881
LIVEKIT_RTC_UDP_BIND_ADDR=0.0.0.0
LIVEKIT_RTC_UDP_PORT_RANGE_START=50000
LIVEKIT_RTC_UDP_PORT_RANGE_END=50200

LOG_MAX_SIZE=5m
LOG_MAX_FILE=5
